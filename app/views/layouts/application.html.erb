<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%= @page_title || APP_CONFIG[:site_name] %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />
 	    <%= stylesheet_link_tag 'screen' %>
		<%= stylesheet_link_tag 'base' %>
	    <!--[if IE]>
	        <%= stylesheet_link_tag 'ie' %>
	    <![endif]-->

		<%= javascript_include_tag "tiny_mce/tiny_mce.js" %>
		
		<%= javascript_include_tag :defaults %>		
		<!--<script language="javascript" type="text/javascript">
		tinyMCE.init({
			theme : "simple",
			mode : "textareas"
		});
		</script>-->

	</head>
	<body>
		<div id="wrapper" class="container">
			<div class="span-24 last">
				<div id="signup">
					<% if logged_in? %>
					<li>Logged in as: <%= current_user.login %> | <%= link_to 'Logout', logout_path %></li>
					<% else %>
					<li><%= link_to 'Login', login_path %></li>&nbsp; | &nbsp;
					<li><%= link_to 'Signup', signup_path %></li>
					<% end %>
				</div>
				<h1>Postcards from Wherever</h1>
				<ul id="nav">
					<li><%= link_to "Postcards Home", postcards_path %></li>
					<li><%= link_to "Submit a Postcard", new_postcard_path %></li>
				</ul>
			</div>
			<div id="content" class="span-24">
				<%= flash_messages %>
				<%= yield :layout %>
			</div>
			<div class="span-24">
				The footer goes here
			</div>
		</div>
	</body>
</html>