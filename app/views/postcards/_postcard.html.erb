<% div_for(postcard, :class => "span-12") do %>
	<% if postcard.approved? %>
	<div class="image span-3"><%= image_tag postcard.photo.url(:thumb) %></div>
	<div class="post-data span-9 last">
		<h3><%= link_to postcard.title, postcard %></h3>
		<p class="desc"><%= postcard.description %></p>
		<p class="meta">Submitted by: <%= postcard.user.login %>
		<% unless postcard.tag_list.empty? %>
			&nbsp;|&nbsp;Tags: <%= render :partial => postcard.tags %>&nbsp;|&nbsp;
			<% end %>Votes <%= postcard.votes_count %>
			<% if logged_in? && current_user.id = postcard.user_id %>
				<%= link_to 'Edit', edit_postcard_path(postcard) %>
			<% end %>
		</p>
	</div>
	<div class="spacer"></div>
	<% end %>
<% end %>