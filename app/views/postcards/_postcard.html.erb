<% div_for(postcard, :class => "span-15") do %>
	<% if postcard.approved? %>
	<div class="span-4">
		<span class="date"><%= postcard.created_at.strftime("%d %B %Y, %H:%M") %></span>
	</div>
	<div class="image span-4">
		<%= image_tag postcard.photo.url(:thumb) %>		
	</div>
	<div class="post-data span-7 last">
		<h3><%= link_to postcard.title, postcard %></h3>
		<p class="desc"><%= postcard.description[0, 250] %>... <%= link_to "Read more", postcard %>
		<p>Submitted by: <%= postcard.user.login %></p>
		<% unless postcard.tag_list.empty? %><p>Tags: <%= render :partial => postcard.tags %></p><% end %>
		<% if logged_in? && current_user.id == postcard.user_id %>
			<p><%= link_to 'Edit', edit_postcard_path(postcard) %></p>
		<% end %>
	</div>
	<% end %>
<% end %>
